{
    "name": "openclassrooms/elasticsearch-bundle",
    "description": "Symfony2 Bundle for Elasticsearch",
    "keywords": ["search", "client", "elasticsearch"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Romain Kuzniak",
            "email": "romain.kuzniak@turn-it-up.org"
        },
        {
            "name": "OpenClassrooms",
            "email": "technique@openclassrooms.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OpenClassrooms\\Bundle\\ElasticsearchBundle\\": ""
        }
    },
    "require": {
        "php": ">=5.3.9",
        "elasticsearch/elasticsearch": "~1.0",
        "symfony/dependency-injection": "~2.1",
        "symfony/config": "~2.1",
        "symfony/http-kernel": "~2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "satooshi/php-coveralls": "dev-master"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
